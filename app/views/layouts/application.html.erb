<!DOCTYPE html>
<html>
  <head>
    <title>RoomApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://kit.fontawesome.com/484e6509e8.js" crossorigin="anonymous"></script>
  </head>

  <body>
  <% if flash[:notice] %>
    <div class="notification is-info">
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="notification is-danger">
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>

  <nav class="navbar is-warning">
    <div class="navbar-brand"> 
      <%= link_to root_path, class: "navbar-item" do %>
        <h1 class="title is-4" style="font-family: cursive;">お部屋探し</h1>
      <% end %>
      
      <div class="navbar-item">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :area, value: @area, :placeholder => "エリア" %>
        <% end %>
      </div>
      
      <div class="navbar-item">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword, :placeholder => "キーワード" %>
        <% end %>
      </div>

      <% if user_signed_in? %>
      <div id="navbarExampleTransparentExample" class="navbar-menu">
        <figure class="host-icon">
          <%= attachment_image_tag current_user, :profile_image, fallback: "no-image.png", class: "profile_image is-rounded" %>
        </figure>
        <div class="navbar-item">
          <%= link_to "お部屋の登録", new_room_path ,class: "navbar-item button is-warning is-light" %>
        </div>
        <div class="navbar-item">
          <%= link_to "みんなの投稿", rooms_path ,class: "navbar-item button is-warning is-light" %>
        </div>
        <div class="navbar-item">
          <%= link_to "マイページ", users_path(current_user) ,class: "navbar-item button is-warning is-light"%>
        </div>
        <div class="navbar-item">
          <%= link_to "予約部屋履歴", reservations_path(current_user) ,class: "navbar-item button is-warning is-light"%>
        </div>
        <div class="navbar-item">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete ,class: "navbar-item button is-warning is-light"%>
        </div>
      <% else %>
        <div class="navbar-item">
          <%= link_to "みんなの投稿一覧", rooms_path ,class: "navbar-item button is-warning is-light" %>
        </div>
        <div class="navbar-item">
          <%= link_to 'ログイン', new_user_session_path ,class: "navbar-item button is-warning is-light"%>
        </div>
        <div class="navbar-item">
          <%= link_to '登録する', new_user_registration_path ,class: "navbar-item button is-warning is-light"%>
        </div>
      <% end %>
      </div>
    </div>
  </nav>
  <%= yield %>
  </body>
</html>
