<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        アカウント編集画面
      </h1>
    </div>
  </div>
</section>

<%= render "shared/error", obj: @user %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @user do |f| %>
          <div class="field">
            <%= f.label :username, "名前", class: "label" %>
            <%= f.text_field :username, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :email, "メールアドレス", class: "label" %>
            <%= f.text_field :email, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :profile, "紹介文", class: "label" %>
            <%= f.text_area :profile, class: "textarea" %>
          </div>
          
          <div class="field">
          <%= f.label :profile_image, "プロフィール画像", class: "label" %>
          <%= f.attachment_field :profile_image, class: "input" %>
          </div>
          
          <%= f.submit '更新', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
