<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        投稿一覧画面
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
  <h1 class="subtitle">現在の投稿数<%=@rooms.count %>件</h1>
    <div class="columns">
      <% @rooms.each do |room| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to room_path(room) do %>
                  <%= attachment_image_tag room, :room_image, fallback: "no-image.png" %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= attachment_image_tag room.user, :profile_image, fallback: "no-image.png", class: "profile_image" %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="title"><%=link_to room.room_name, room_path(room) %></div>
                  <div>宿泊料：¥<%= room.room_price %></div>
                  <p><%= room.user.username%>さんの投稿</p>
                  <p>投稿時間：<%= room.updated_at.to_fs(:datetime_jp)%></p>
                  <% if user_signed_in? %>
                    <% if current_user.already_favorited?(room) %>
                      <%= button_to room_favorites_path(room), method: :delete do %>
                        <i class="fas fa-heart"></i>
                      <% end %>
                    <% else %>
                      <%= button_to room_favorites_path(room), method: :post do %>
                        <i class="fas fa-heart"></i>
                      <% end %>
                    <% end %>
                    <%= room.favorites.count %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
